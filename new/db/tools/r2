NAME=r2 -
FILE=-
CMDS=e file.path
EXPECT=<<RUN

RUN

NAME=r2 -
FILE=-
CMDS=e file.lastpath
EXPECT=<<RUN

RUN

NAME=r2 --
FILE=--
CMDS=e file.path
EXPECT=<<RUN

RUN

NAME=r2 --
FILE=../bins/elf/bomb
CMDS=r2 -s main -qc "s" ../bins/elf/bomb
EXPECT=<<RUN
0x400da0
RUN

NAME=seek undo/redo
FILE=-
CMDS=<<EXPECT
wx 01
s 1
s-
s+
pb 8
EXPECT=<<RUN
00000000
RUN

NAME=seek undo/redo
FILE=-
CMDS=wx 01; s 1; s-; s+; pb 8
EXPECT=<<RUN
00000000
RUN

NAME=r2 -V
BROKEN=1 # on Travis/macOS only wtf
FILE=-
CMDS=!!r2 -V~r_anal?
EXPECT=<<RUN
1
RUN

NAME=r2 -h
FILE=-
BROKEN=1 # on Travis/macOS only wtf
CMDS=!!r2 -h~Usage?
EXPECT=<<RUN
1
RUN

NAME=r2 -hh
FILE=-
BROKEN=1 # on Travis/macOS only wtf
CMDS=!!r2 -hh~R2_USER_PLUGINS?
EXPECT=<<RUN
1
RUN

NAME=r2 -L
FILE=-
BROKEN=1 # on Travis/macOS only wtf
CMDS=!!r2 -L~default?
EXPECT=<<RUN
1
RUN
